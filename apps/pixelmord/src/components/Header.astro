---
import { SITE } from "@/config";
---

<header class="w-full max-w-3xl mx-auto mb-12 sm:mb-16">
    {
        SITE.logo && SITE.logo?.src ? (
            <a href="/">
                <img src={SITE.logo.src} alt={SITE.logo.alt || ''} class="max-h-12" />
            </a>
        ) : (
            <a class="font-serif text-2xl leading-tight font-medium text-theme-foreground sm:text-4xl" href="/">
                {SITE.title}
            </a>
        )
    }
    {SITE.subtitle && <p class="text-sm leading-tight mt-1">{SITE.subtitle}</p>}
</header>
